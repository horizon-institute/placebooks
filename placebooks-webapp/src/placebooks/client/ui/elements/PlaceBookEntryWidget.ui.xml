<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:p="urn:import:placebooks.client.ui.elements"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.author {
			font-size: 10px;
			color: #555;
		}
		
		.placebookEntry {
			padding: 5px;
			margin: 0;
			width: 150px;
			text-align: center;
			border-radius: 16px;
			display: inline-block;
			vertical-align: top;
			position: relative;
		}
		
		.textPanel {
			display: inline-block;
			max-width: 132px;
			vertical-align: top;
		}
		
		.placebookEntry:HOVER {
			background-color: #DDD;
		}

		.marker {
			display: inline-block;
			margin-right: 5px;
		}
		
		.title {
			font-family: mako, sans-serif;
			font-size: 16px;
		}		

		.deleteIcon {
			position: absolute;
			top: 0px;
			right: 20px;
			cursor: pointer;
		}
	</ui:style>
	<ui:with field='images' type='placebooks.client.ui.images.Images'/>
	<ui:with field='markers' type='placebooks.client.ui.images.markers.Markers'/>	
	<p:MousePanel ui:field="container" styleName="{style.placebookEntry}">
		<g:Image ui:field="delete" resource="{images.delete}" styleName="{style.deleteIcon}" />	    
		<g:Image ui:field="image" resource="{images.placebook128}"/>
		<g:FlowPanel>
			<g:Image ui:field="markerImage" resource="{markers.markera}" styleName="{style.marker}" />		
			<g:FlowPanel styleName="{style.textPanel}">			
				<g:Label ui:field="title" styleName="{style.title}" />
				<g:Label ui:field="author" styleName="{style.author}" />
				<g:Label ui:field="distance" styleName="{style.author}" />				
			</g:FlowPanel>			
		</g:FlowPanel>
	</p:MousePanel>
</ui:UiBinder> 