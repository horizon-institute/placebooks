<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:pal="urn:import:placebooks.client.ui.palette" xmlns:v="urn:import:placebooks.client.ui.views" xmlns:w="urn:import:placebooks.client.ui.widgets"
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="en">
	<ui:style type='placebooks.client.ui.pages.PlaceBookView.Style'>
		.infoPanel {
			padding: 0px 30px;
			background: #EEE;
			border-bottom: 1px solid #CCC;
		}
		
		.title {
			font-size: 18px;
			margin-right: 5px;
		}
		
		.author {
			margin-right: 5px;
		}
		
		.dropArrow {
			vertical-align: 20%;
		}
		
		.parent {
			position: absolute;
			top: 0px;
			left: 0px;
			right: 0px;
			bottom: 0px;
		}
		
		.titleBlock {
			padding: 7px 0;
		}
		
		.actionMenu {
			font: 16px verdana, arial, sans-serif;
			padding: 7px 15px 8px !important;
			border-radius: 5px;
			display: inline-block;
		}
		
		.groupTag a {
			padding: 7px 15px 8px;
			color: #555 !important;
			text-decoration: none;
			border-radius: 5px;
			border-bottom: 1px solid rgba(0,0,0,0.25);
			cursor: pointer;
			background: #BBB;
			margin-right: 10px;
		}

		.groupTag a:HOVER {
			background: #AAA;
		}

		.bookPanel {
			position: absolute;
			top: 92px;
			left: 0px;
			right: 0px;
			bottom: 0px;
		}
		
		.dropMenu {
			position: absolute;
			z-index: 3000;
			padding: 0px;
			transition: clip 0.1s linear;
			background: #FFF;
			-moz-box-shadow: 3px 3px 4px #222;
			-webkit-box-shadow: 3px 3px 4px #222;
			box-shadow: 3px 3px 6px #222;
			border: 1px solid #DDD;
		}
		
		.menuItem {
			padding: 3px 12px;
			cursor: pointer;
			border-top: 1px solid #FFF;
			border-bottom: 1px solid #FFF;
		}
		
		.menuItem:HOVER {
			background: #ccc;
			border-top: 1px solid #BBB;
			border-bottom: 1px solid #BBB;
		}
		
		.right {
			float: right;
			display: -webkit-flex;
			-webkit-align-items: center; 
			height: 50px;
		}

		.android {
			height: 35px;
			margin-right: 10px;
			display: inline-block;
		}

		.qrcode {
			cursor: pointer;
			width: 50px;
			height: 50px;
			margin-right: 10px;
		}

		.inline {
			display: inline-block;
		}
	</ui:style>
	<g:FlowPanel styleName="{style.parent}">
		<g:FlowPanel styleName="printHidden">
			<v:PlaceBookToolbar ui:field="toolbar" />
			<g:FlowPanel ui:field="infoPanel" styleName="{style.infoPanel}">
			    <g:FlowPanel styleName="{style.right}">
					<w:FacebookLikeButton ui:field="facebookLike" styleName="{style.inline}" />
	   				<w:GooglePlusOne ui:field="googlePlus" styleName="{style.inline}" />
	   				<g:FlowPanel ui:field="groups" styleName="{style.inline}" />
					<w:AndroidLink styleName="{style.android}" package="com.peoplescollection.placebooks" />
	  				<g:Image ui:field="qrcode" addStyleNames="{style.qrcode} {style.inline}" />					
					<w:ToolbarItem ui:field="actionMenu" addStyleNames="{style.actionMenu}"><ui:msg>Actions</ui:msg></w:ToolbarItem>							
				</g:FlowPanel>	
				<g:FlowPanel styleName="{style.titleBlock}">
					<g:Label ui:field="titleLabel" styleName="{style.title}" />
					<g:FlowPanel>
						<g:InlineLabel>&nbsp;by&nbsp;</g:InlineLabel>
						<g:Anchor ui:field="authorLabel" styleName="{style.author}" />
					</g:FlowPanel>
				</g:FlowPanel>				
			</g:FlowPanel>
			<w:DropMenu ui:field="dropMenu" styleName="{style.dropMenu}">
				<g:Label ui:field="delete" styleName="{style.menuItem}"><ui:msg>Delete PlaceBook</ui:msg></g:Label>
			</w:DropMenu>
		</g:FlowPanel>
		<v:PlaceBookPages ui:field="bookPanel" styleName="{style.bookPanel}" />
		<w:ProgressPanel ui:field="loadingPanel" text="Loading..." />
	</g:FlowPanel>
</ui:UiBinder>