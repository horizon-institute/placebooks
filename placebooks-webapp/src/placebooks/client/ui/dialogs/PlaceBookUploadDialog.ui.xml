<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:placebooks.client.ui.elements" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
	ui:generateLocales="en">
	<ui:style>
		.textArea {
			width: 100%;

		}
	
		.copyright {
			margin-top: 5px;

		}
	
		.button {
			float: right;
			margin-bottom: 10px
		}
	</ui:style>	
	<g:FlowPanel>
		<g:FormPanel ui:field="form"> 
			<g:FlowPanel>
				<g:FileUpload ui:field="upload" />
				<g:Label ui:field="infoLabel" />				
				<g:Hidden ui:field="itemKey" name="itemKey" />
				<g:Label styleName="{style.copyright}"><ui:msg>Copyright Information</ui:msg></g:Label>
				<g:TextArea styleName="{style.textArea}" ui:field="copyright"/>
				<g:FlowPanel>
					<g:SubmitButton ui:field="uploadButton" styleName="{style.button}"><ui:msg>Upload</ui:msg></g:SubmitButton>
				</g:FlowPanel>
			</g:FlowPanel>
		</g:FormPanel>
	</g:FlowPanel>
</ui:UiBinder> 